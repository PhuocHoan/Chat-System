<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.haichutieu.chatsystem.client.gui.adminPanel.Statistics">
   <children>
      <VBox stylesheets="@adminPanel.css" HBox.hgrow="ALWAYS">
         <children>
            <Label graphicTextGap="10.0" text="Yearly New Users">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <HBox alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Year" />
                        <ComboBox fx:id="newUserYearFilter" prefHeight="26.0" prefWidth="84.0" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <BarChart fx:id="yearlyNewUser" title="New Users" titleSide="BOTTOM" VBox.vgrow="SOMETIMES">
              <xAxis>
                <CategoryAxis side="BOTTOM" fx:id="xMonthNewUser" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="yQuantityNewUsers" side="LEFT" />
              </yAxis>
            </BarChart>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <styleClass>
            <String fx:value="wrapper" />
            <String fx:value="tab-user-management" />
         </styleClass>
      </VBox>
      <VBox stylesheets="@adminPanel.css" HBox.hgrow="ALWAYS">
         <children>
            <Label graphicTextGap="10.0" text="Yearly App Usage">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER_RIGHT" spacing="5.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="Year" />
                        <ComboBox fx:id="appUsageYearFilter" prefHeight="26.0" prefWidth="84.0" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>
            <BarChart fx:id="yearlyAppUsage" title="App Usage" titleSide="BOTTOM" VBox.vgrow="SOMETIMES">
               <xAxis>
                  <CategoryAxis side="BOTTOM" fx:id="xMonthAppUsage" />
               </xAxis>
               <yAxis>
                  <NumberAxis fx:id="yQuantityAppUsage" side="LEFT" />
               </yAxis>
            </BarChart>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <styleClass>
            <String fx:value="wrapper" />
            <String fx:value="tab-user-management" />
         </styleClass>
      </VBox>
   </children>
</HBox>
